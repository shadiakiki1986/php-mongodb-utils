{
    "name": "shadiakiki1986/mongodb-utils",
    "description": "Useful functions for working with mongodb",
    "license": "MIT",
    "authors": [
        {
            "name": "Shadi Akiki",
            "email": "shadiakiki1986@gmail.com"
        }
    ],
    "require": {
        "php": ">=7",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "ext-mongodb": "*",
        "mongodb/mongodb": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MongodbUtils\\": "src"
        }
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor",
            "MONGO_ADDR=\"mongodb://localhost:27017\" phpunit --verbose"
        ],
        "initMongoTestDb": [
          "ID=`docker run -d -p 27017:27017 mongo` && docker exec -i $ID mongo --eval 'db.coll.insert({field:\"value\"})'"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6"
    }
}
